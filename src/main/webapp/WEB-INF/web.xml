<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<servlet>
		<servlet-name>UploadImage</servlet-name>
		<servlet-class>by.topolev.courses.servlets.UploadImage</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>ShowImage</servlet-name>
		<servlet-class>by.topolev.courses.servlets.ShowImage</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>ValidateFileNameField</servlet-name>
		<servlet-class>by.topolev.courses.servlets.ValidField</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>UploadImage</servlet-name>
		<url-pattern>/upload</url-pattern>
	</servlet-mapping>


	<servlet-mapping>
		<servlet-name>ShowImage</servlet-name>
		<url-pattern>/show</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>ValidateFileNameField</servlet-name>
		<url-pattern>/validateFileNameField</url-pattern>
	</servlet-mapping>



	<welcome-file-list>
		<welcome-file>form_upload_image.jsp</welcome-file>
	</welcome-file-list>
</web-app>
